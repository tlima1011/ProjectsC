#include <stdio.h>
#include <stdlib.h>

int main()
{
    int codigo, quantidade;
    double preco;

    printf("Codigo do Produto Comprado: ");
    scanf("%d", &codigo);

    switch(codigo){
    case 1:
        printf("Quantidade comprada: ");
        scanf("%d", &quantidade);
        preco = 5 * quantidade;
        printf("Valor a pagar R$%.2lf", preco);
        break;
    case 2:
        printf("Quantidade comprada: ");
        scanf("%d", &quantidade);
        preco = 3.50 * quantidade;
        printf("Valor a pagar R$%.2lf", preco);
        break;
    case 3:
        printf("Quantidade comprada: ");
        scanf("%d", &quantidade);
        preco = 4.80 * quantidade;
        printf("Valor a pagar R$%.2lf", preco);
        break;
    case 4:
        printf("Quantidade comprada: ");
        scanf("%d", &quantidade);
        preco = 8.90 * quantidade;
        printf("Valor a pagar R$%.2lf", preco);
        break;
    case 5:
        printf("Quantidade comprada: ");
        scanf("%d", &quantidade);
        preco = 7.30 * quantidade;
        printf("Valor a pagar R$%.2lf", preco);
        break;
    default:
        printf("Invalido");
        break;
    }

    return 0;
}
